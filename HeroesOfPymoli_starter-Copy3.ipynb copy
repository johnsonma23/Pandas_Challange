    "# Put the Bin into a Dataframe\n",
    "AgePurchase[\"Age Ranges\"] = pd.cut(AgePurchase[\"Age\"], bin, labels=P_Age_labels)\n",
    "AgePurchase.head()\n",
    "\n",
    "\n",
    "#Groupby Age \n",
    "Age_Purchase_group = AgePurchase.groupby(\"Age Ranges\")\n",
    "#Find the number of row in each bin\n",
    "Buy_AgeCount=Age_Purchase_group[\"Age\"].count()\n",
    "AverageAgePrice=Age_Purchase_group[\"Price\"].mean().map(\"${:,.2f}\".format)\n",
    "TotalAgePrice=Age_Purchase_group[\"Price\"].sum()\n",
    "AveragePricePerson=TotalAgePrice/Buy_AgeCount\n",
    "\n",
    "AgeSummary={\"Purchase Count\": Buy_AgeCount, \"Average Purchse Price\": AverageAgePrice,\n",
    "            \"Total Purchase Value\": TotalAgePrice,\"Avg Total Purchase per Person\": AveragePricePerson}\n",
    "AgeTable=pd.DataFrame(AgeSummary)\n",
    "AgeTable"
