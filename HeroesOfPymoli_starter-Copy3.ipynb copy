   "source": [
    "Heroes_df = pd.read_csv(Heroes_pd)\n",
    "AgeDemographics=Heroes_df\n",
    "#print(AgeDemographics[\"Age\"].max())\n",
    "\n",
    "\n",
    "#Creating bins\n",
    "bin=[0,8,14,19,24,29,34,39,45]\n",
    "Age_labels = ['<10','10-14','15-19','20-24','25-29','30-34','35-39','40+']\n",
    "\n",
    "pd.cut(AgeDemographics[\"Age\"], bin, labels=Age_labels).head()\n",
    "# Put the Bin into a Dataframe\n",
    "AgeDemographics[\"Age Range\"] = pd.cut(AgeDemographics[\"Age\"], bin, labels=Age_labels)\n",
    "AgeDemographics.head()\n",
    "\n",
    "\n",
    "#Groupby Age \n",
    "Age_group = AgeDemographics.groupby(\"Age Range\")\n",
    "#Find the number of row in each bin\n",
